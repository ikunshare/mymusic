<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.mylrc.mymusic">

  <uses-sdk
    android:minSdkVersion="21"
    android:targetSdkVersion="28"/>

  <application
    android:allowBackup="true"
    android:appComponentFactory="androidx.core.app.CoreComponentFactory"
    android:requestLegacyExternalStorage="true"
    android:hardwareAccelerated="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name="com.mylrc.mymusic.tool.APPApplication"
    android:networkSecurityConfig="@xml/network_security_config"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:exported="true"
      android:label="@string/app_name"
      android:name="com.mylrc.mymusic.activity.Splash">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.MainActivity"
      android:resizeableActivity="true"
      android:windowSoftInputMode="stateHidden|adjustPan" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.CloudDiskActivity"
      android:resizeableActivity="true" />
<!--    <activity-->
<!--      android:launchMode="singleTask"-->
<!--      android:name="com.mylrc.mymusic.activity.DonateActivity"-->
<!--      android:resizeableActivity="true"-->
<!--      android:screenOrientation="portrait" />-->
    <activity
      android:configChanges="orientation|screenSize"
      android:name="com.mylrc.mymusic.activity.MVActivity"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.SongListActivity"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.QQLoginActivity"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.ErrorActivity"
      android:process=":errorProcess"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.DownDirectoryActivity"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.DownloadHistoryActivity"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.FileChooserActivity"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.PlayerActivity"
      android:resizeableActivity="true"
      android:theme="@style/th" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.QQPlayListActivity"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.BrowserActivity"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.AppSettingActivity"
      android:resizeableActivity="true" />
    <activity
      android:configChanges="orientation|screenSize"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.AboutActivity"
      android:resizeableActivity="true" />
    <activity
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.WYYLoginActivity"
      android:resizeableActivity="true" />
    <activity
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.activity.WYYPlayListActivity"
      android:resizeableActivity="true" />

    <meta-data
      android:name="android.max_aspect"
      android:value="4.0" />
    <provider
      android:authorities="com.mylrc.mymusic.fileProvider"
      android:exported="false"
      android:grantUriPermissions="true"
      android:name="androidx.core.content.FileProvider">
      <meta-data
        android:name="android.support.FILE_PROVIDER_PATHS"
        android:resource="@xml/file_paths" />
    </provider>

    <receiver
      android:exported="true"
      android:name="com.mylrc.mymusic.receiver.HeadsetButtonReceiver">
      <intent-filter android:priority="1000">
        <action android:name="android.intent.action.MEDIA_BUTTON" />
      </intent-filter>
    </receiver>
    <service
      android:enabled="true"
      android:exported="true"
      android:name="com.mylrc.mymusic.service.DownloadService" />
    <service
      android:configChanges="orientation|screenSize"
      android:enabled="true"
      android:exported="true"
      android:launchMode="singleTask"
      android:name="com.mylrc.mymusic.service.PlayerService" />
  </application>

  <uses-feature android:name="android.hardware.usb.host" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
  <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />

  <uses-permission android:name="android.permission.GET_TASKS" />
  <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
</manifest>
