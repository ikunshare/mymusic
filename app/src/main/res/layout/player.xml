<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerLinearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="115.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="45.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22.0dip"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ff000000"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:layout_marginRight="22.0dip"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffb0b0b0"
                android:textSize="12.0sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/playerRelativeLayout2"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/selector_btn_default">

            <ImageView
                android:layout_width="23.0dip"
                android:layout_height="23.0dip"
                android:layout_centerInParent="true"
                android:background="@drawable/category_open_n"
                android:text="Text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/tool_more_light_new_n"
                android:text="Text"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/playerLinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="90.0dip"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">

                    <RelativeLayout
                        android:id="@+id/up"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_btn_default">

                        <ImageView
                            android:layout_width="37.0dip"
                            android:layout_height="37.0dip"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_back"
                            android:text="Text" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mode"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25.0dip"
                        android:background="@drawable/selector_btn_default">

                        <ImageView
                            android:id="@+id/playerImageView1"
                            android:layout_width="45.0dip"
                            android:layout_height="45.0dip"
                            android:layout_centerInParent="true"
                            android:background="@drawable/all"
                            android:text="Text" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">

                    <RelativeLayout
                        android:id="@+id/playerRelativeLayout3"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/selector_btn_default">

                        <ImageView
                            android:id="@+id/play"
                            android:layout_width="35.0dip"
                            android:layout_height="35.0dip"
                            android:layout_centerInParent="true"
                            android:background="@drawable/stop"
                            android:text="小型文本"
                            android:textAppearance="?android:textAppearanceSmall" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">

                    <RelativeLayout
                        android:id="@+id/next"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_btn_default"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="37.0dip"
                            android:layout_height="37.0dip"
                            android:background="@drawable/next"
                            android:text="Text" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/plist"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25.0dip"
                        android:background="@drawable/selector_btn_default">

                        <ImageView
                            android:layout_width="45.0dip"
                            android:layout_height="45.0dip"
                            android:layout_centerInParent="true"
                            android:background="@drawable/list"
                            android:text="Text" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/playerRelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_above="@id/playerLinearLayout1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="28.0dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="100.0dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="00:00"
                        android:textColor="#ff000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"
                    android:layout_weight="2.0"
                    android:gravity="center_vertical">

                    <SeekBar
                        android:id="@+id/playerSeekBar1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxHeight="3.2999878dip"
                        android:minHeight="25.0dip"
                        android:progressDrawable="@drawable/playseek"
                        android:thumbOffset="0.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/time2"
                        android:layout_width="100.0dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="00:00"
                        android:textColor="#ff000000" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/playerRelativeLayout4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/playerRelativeLayout1"
            android:layout_marginBottom="15.0dip"
            android:paddingLeft="30.0dip"
            android:paddingRight="30.0dip">

            <LinearLayout
                android:id="@+id/playerLinearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:enabled="false"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/playerImageView2"
                    android:layout_width="fill_parent"
                    android:layout_height="262.0dip" />

                <com.mylrc.mymusic.tool.LrcView
                    android:id="@+id/playerLrcView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="15.0dip"
                    android:gravity="center"
                    android:text="未找到歌词"
                    android:textColor="#ff007eff"
                    android:textSize="15.0sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
