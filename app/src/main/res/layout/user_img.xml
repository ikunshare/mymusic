<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userimgTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:gravity="center"
                android:text="设置头像"
                android:textColor="#ff000000"
                android:textSize="13.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:minHeight="90.0dip"
        android:orientation="vertical">

        <EditText
            android:id="@+id/userimgEditText1"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_marginLeft="30.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="30.0dip"
            android:background="@drawable/white2"
            android:gravity="center_vertical"
            android:hint="QQ"
            android:paddingLeft="25.0dip"
            android:paddingRight="72.0dip"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textSize="12.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0dip"
            android:layout_marginTop="25.0dip"
            android:gravity="center"
            android:text="提示：请输入您的QQ，以便系统获取头像"
            android:textColor="#ff00b4ff"
            android:textSize="11.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:background="?android:dividerVertical"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/userimgButton1"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_marginLeft="45.0dip"
            android:layout_marginBottom="30.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/selector_btn_blue_rounded"
            android:text="保存"
            android:textColor="#ffffffff"
            android:textSize="12.0sp" />

        <View
            android:layout_width="45.0dip"
            android:layout_height="fill_parent"
            android:background="?android:dividerHorizontal"
            android:visibility="invisible" />

        <Button
            android:id="@+id/userimgButton2"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_marginRight="45.0dip"
            android:layout_marginBottom="30.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/selector_btn_gray_light_rounded"
            android:text="取消"
            android:textColor="#ff000000"
            android:textSize="12.0sp" />
    </LinearLayout>
</LinearLayout>
