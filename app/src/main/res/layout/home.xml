<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eRelativeLayout4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.9"
        android:scaleType="centerCrop"
        android:text="Text"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="20.0dip"
            android:gravity="center_vertical"
            android:text="歌单"
            android:textSize="17.0sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="10.0dip">

            <RelativeLayout
                android:id="@id/eRelativeLayout1"
                android:layout_width="60.0dip"
                android:layout_height="fill_parent">

                <com.mylrc.mymusic.tool.CircleImageView
                    android:id="@+id/eImageView5"
                    android:layout_width="38.0dip"
                    android:layout_height="38.0dip"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_avatar" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/eRelativeLayout1">

                <LinearLayout
                    android:id="@+id/searchTextView"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="11.0dip"
                    android:background="@drawable/selector_btn_default"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eButtonkey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="搜索"
                        android:textColor="#ff000000"
                        android:textSize="13.0sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/searchTextView"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/eEditText1"
                        android:layout_width="fill_parent"
                        android:layout_height="35.0dip"
                        android:background="@drawable/btn_selector_gray_rounded"
                        android:gravity="center_vertical"
                        android:hint="关键词"
                        android:imeOptions="actionSearch"
                        android:paddingLeft="37.0dip"
                        android:paddingRight="72.0dip"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:textSize="12.0sp" />

                    <LinearLayout
                        android:id="@+id/eLinearLayout1"
                        android:layout_width="25.0dip"
                        android:layout_height="30.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="7.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="6.0dip">

                        <ImageView
                            android:layout_width="11.0dip"
                            android:layout_height="11.0dip"
                            android:background="@drawable/ic_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/eLinearLayout2"
                        android:layout_width="25.0dip"
                        android:layout_height="35.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_toLeftOf="@id/eLinearLayout1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20.0dip"
                            android:layout_height="20.0dip"
                            android:background="@drawable/to" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="16.5dip"
                        android:layout_height="16.5dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14.0dip"
                        android:layout_marginTop="1.0dip"
                        android:background="@drawable/search" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gklayout"
            android:layout_width="fill_parent"
            android:layout_height="32.0dip">

            <ImageView
                android:id="@+id/eImageView2"
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:layout_centerVertical="true"
                android:layout_marginStart="10.0dip"
                android:background="@drawable/notice" />

            <com.mylrc.mymusic.tool.MarqueeTextView
                android:id="@+id/eTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.0dip"
                android:layout_toEndOf="@id/eImageView2"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="1"
                android:singleLine="true"
                android:text="@string/defaultWelcome"
                android:textColor="#fff544b4"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#ffeeeeee" />

        <LinearLayout
            android:id="@+id/eLinearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="58.0dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/eButton1"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/border_3"
                android:text="古风歌曲"
                android:textSize="11.0sp" />

            <Button
                android:id="@+id/eButton2"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/border_3"
                android:text="抖音热歌"
                android:textSize="11.0sp" />

            <Button
                android:id="@+id/eButton3"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/border_3"
                android:text="英文歌曲"
                android:textSize="11.0sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/eListView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:divider="@null"
                    android:scrollbars="none" />

                <ListView
                    android:id="@+id/eListView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:divider="@null"
                    android:scrollbars="none" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/eRelativeLayout2"
                android:layout_width="fill_parent"
                android:layout_height="135.0dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/eImageView4"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60.0dip"
                    android:background="@drawable/switch_source" />

                <ImageView
                    android:id="@+id/eImageView3"
                    android:layout_width="35.0dip"
                    android:layout_height="35.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="140.0dip"
                    android:layout_toLeftOf="@id/eImageView4"
                    android:background="@drawable/download"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:id="@+id/eRelativeLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25.0dip"
                    android:layout_marginTop="5.0dip"
                    android:visibility="invisible">

                    <com.mylrc.mymusic.tool.CircleImageView
                        android:id="@+id/eImageView1"
                        android:layout_width="43.0dip"
                        android:layout_height="43.0dip"
                        android:background="@drawable/listen" />

                    <ImageView
                        android:id="@+id/eImageView7"
                        android:layout_width="18.0dip"
                        android:layout_height="18.0dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/stop2"
                        android:text="Text" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/eImageView6"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_above="@id/eRelativeLayout2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="65.0dip"
                android:layout_marginBottom="25.0dip"
                android:background="@drawable/selectall"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
