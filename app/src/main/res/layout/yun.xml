<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="#fffffefe"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <ImageView
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:text="Text"
    android:alpha="0.9"/>
  <LinearLayout
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="搜索音乐"
        android:layout_centerVertical="true"/>
      <TextView
        android:textSize="16sp"
        android:id="@+id/eTextView3"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="搜索歌单"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
      android:textSize="17sp"
      android:gravity="center_vertical"
      android:layout_gravity="right"
      android:id="@+id/eTextView2"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_marginRight="20dp"
      android:text="歌单"/>
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_marginTop="10dp">
      <RelativeLayout
        android:id="@+id/eRelativeLayout1"
        android:layout_width="60dp"
        android:layout_height="match_parent">
        <TextView
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="14sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="搜索"
          android:layout_centerInParent="true"/>
      </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/eRelativeLayout1">
        <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:id="@+id/yLinearLayout4"
          android:background="@drawable/selector_btn_default"
          android:layout_width="42dp"
          android:layout_height="42dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="11dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true">
          <TextView
            android:textSize="13sp"
            android:textColor="#ff000000"
            android:gravity="center"
            android:id="@+id/eButtonkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"/>
        </LinearLayout>
        <RelativeLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@+id/yLinearLayout4"
          android:layout_centerVertical="true">
          <EditText
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:id="@+id/yunEditText1"
            android:background="@drawable/btn_selector_gray_rounded"
            android:paddingLeft="37dp"
            android:paddingRight="72dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="歌曲名或歌手"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@drawable/my_cursor"/>
          <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/yunLinearLayout1"
            android:paddingLeft="6dp"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ImageView
              android:background="@drawable/ic_close"
              android:layout_width="11dp"
              android:layout_height="11dp"/>
          </LinearLayout>
          <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/yunLinearLayout2"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/yunLinearLayout1">
            <ImageView
              android:background="@drawable/to"
              android:layout_width="20dp"
              android:layout_height="20dp"/>
          </LinearLayout>
          <ImageView
            android:background="@drawable/search"
            android:layout_width="16.5dp"
            android:layout_height="16.5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="1dp"
            android:layout_centerVertical="true"/>
        </RelativeLayout>
      </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
      android:id="@+id/gklayout"
      android:layout_width="match_parent"
      android:layout_height="35dp">
      <ImageView
        android:id="@+id/eImageView2"
        android:background="@drawable/notice"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>
      <com.mylrc.mymusic.tool.MarqueeTextView
        android:textSize="12sp"
        android:textColor="#fff544b4"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:id="@+id/yuny1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="欢迎使用，有什么好的建议请反馈哟"
        android:singleLine="true"
        android:layout_toRightOf="@+id/eImageView2"
        android:layout_centerVertical="true"
        android:marqueeRepeatLimit="1"/>
    </RelativeLayout>
    <View
      android:background="#ffe7e7e7"
      android:layout_width="match_parent"
      android:layout_height="0.2dp"/>
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
          android:id="@+id/yunListView1"
          android:scrollbars="none"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:divider="@null"
          android:layout_weight="1"/>
      </LinearLayout>
      <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/eRelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>
  </LinearLayout>
</RelativeLayout>