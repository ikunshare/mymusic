<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dip"
            android:text="搜索音乐"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/eTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:text="搜索歌单"
            android:textSize="16.0sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip">

        <RelativeLayout
            android:id="@+id/eRelativeLayout1"
            android:layout_width="90.0dip"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/eRelativeLayout1">

            <Button
                android:id="@+id/songlistButton1"
                android:layout_width="50.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/border1"
                android:text="搜索"
                android:textColor="#ff000000"
                android:textSize="11.0sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/songlistButton1">

                <EditText
                    android:id="@+id/songlistEditText1"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:background="@drawable/white2"
                    android:gravity="center_vertical"
                    android:hint="关键词"
                    android:imeOptions="actionNone"
                    android:paddingLeft="25.0dip"
                    android:paddingRight="40.0dip"
                    android:singleLine="true"
                    android:textSize="15.0sp" />

                <LinearLayout
                    android:id="@+id/songlistLinearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="10.0dip">

                    <ImageView
                        android:layout_width="16.0dip"
                        android:layout_height="16.0dip"
                        android:background="@drawable/ic_close" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:background="#fff6f6f6">

        <TextView
            android:id="@+id/songlistTextView1"
            android:layout_width="5.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:background="#fffcc514"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/songlistTextView1"
            android:gravity="center_vertical"
            android:text="歌单列表" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/songlistListView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:dividerHeight="0.5dip"
                    android:scrollbars="none" />
            </LinearLayout>

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginBottom="60.0dip"
                android:background="@drawable/listen"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
